LIBPHLOX_SRC_DIR := $(GET_LOCAL_DIR)
LIBPHLOX_OUT_DIR := $(BUILD_DIR)/$(LIBPHLOX_SRC_DIR)
$(shell mkdir -p $(LIBPHLOX_OUT_DIR))

LIBPHLOX := $(LIBPHLOX_OUT_DIR)/$(LIBPHLOX)

LIBPHLOX_O_FILES := \
	bootfs.o \
	ctype.o \
	vsprintf.o

LIBPHLOX_O_FILES:=$(addprefix $(LIBPHLOX_OUT_DIR)/,$(LIBPHLOX_O_FILES))

ALL_OBJ += $(LIBPHLOX_O_FILES)

$(LIBPHLOX): $(LIBPHLOX_O_FILES)
	$(AR) r $(LIBPHLOX) $(LIBPHLOX_O_FILES)


$(LIBPHLOX_OUT_DIR)/%.o: $(LIBPHLOX_SRC_DIR)/%.c
	$(CC) -c $< $(GLOBAL_CFLAGS) $(KERNEL_CFLAGS) $(INCLUDES) -o $@
