MAKEBOOTFS_SRC_DIR := $(GET_LOCAL_DIR)
MAKEBOOTFS_OUT_DIR := $(BUILD_DIR)/$(TOOLS_DIR)
$(shell mkdir -p $(MAKEBOOTFS_OUT_DIR))

MAKEBOOTFS := $(MAKEBOOTFS_OUT_DIR)/$(MAKEBOOTFS)

MAKEBOOTFS_C_FILES := \
	makebootfs.c

MAKEBOOTFS_C_FILES:=$(addprefix $(MAKEBOOTFS_SRC_DIR)/,$(MAKEBOOTFS_C_FILES))


$(MAKEBOOTFS): $(MAKEBOOTFS_C_FILES)
	$(CC) -O2 $(TOOLS_INCLUDES) -o $(MAKEBOOTFS) $(MAKEBOOTFS_C_FILES)
